title LEAVE MANAGEMENT SYSTEM

link(
     rel="stylesheet"
      href="/public/dist/css/bootstrap.css"
    )
link(
     rel="stylesheet"
      href="/public/kaiawesome/css/all.css"
    )

link(rel='stylesheet' type='text/css' href="/public/login.css")
.container
  .d-flex.justify-content-center.h-100
    .card
      .card-header
        h3 Leave Management System(LeMaSy)-Sign up
       
        .d-flex.justify-content-end.social_icon
          span
            i.fab.fa-facebook-square
          span
            i.fab.fa-google-plus-square

          span
            i.fab.fa-twitter-square
      .card-body
        form(method="POST" action="/signup")
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-user
            input.form-control(type='text' placeholder='username' name='logger' required)
            .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-envelope
            input.form-control(type='email' placeholder='Email' name='email' required)
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-key
            input.form-control(type='password' placeholder='password' name='pass' required)
         
          .form-group
            input.btn.float-right.login_btn(type='submit' value='Sign-up')
      